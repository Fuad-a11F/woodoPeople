{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "rootDir": "../",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

  },
  "include": [
    "../server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../server/dist",
    "../server/**/*.test.ts"
  ]
}
